	@echo testing tdbcodbc against SQL Server
	@set TDBCODBC_TYPE=sqlserver
# the following is identical for all 3 tests
        @set TCL_LIBRARY=$(TCL_LIBRARY:\=/)
        @set TCLLIBPATH=$(OUT_DIR_PATH:\=/)
