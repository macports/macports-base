proc WATCHE {a t e} {
    global  res
    lappend res $a $t $e
    return
}
proc SORTE {} {
    global res
    set tmp {}
    foreach {a t e} $res {
	lappend tmp [list $a $t $e]
    }
    set res {}
    foreach item [lsort -dict $tmp] {
	foreach {a t e} $item break
	lappend res $a $t $e
    }
    return $res
}

