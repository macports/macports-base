    set base [tempPath {find 1}]
    set bdir [file dirname $base]
    set base [file tail $base]
    set here [pwd]
    cd $bdir
    set t [fileutil::traverse %AUTO% $base -prefilter ::rec]
} -constraints unix -body {
    $t files
    lsort $rec
} -cleanup {
    $t destroy
    cd $here
    unset rec bdir base here
    f_cleanup
} -result [list \
	       [tempPath {find 1}] \
	       [tempPath {find 1/find 2}]]

