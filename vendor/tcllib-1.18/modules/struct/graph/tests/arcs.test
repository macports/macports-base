test graph-${impl}-${setimpl}-arcs-adj-1.0 {arcs -adj, border case C code failure} -setup {
    struct::graph mygraph
    mygraph node insert E
    mygraph node insert F
    mygraph arc  insert E F E_F
} -body {
    mygraph arcs -adj E
} -cleanup {
    mygraph destroy
} -result {E_F}

