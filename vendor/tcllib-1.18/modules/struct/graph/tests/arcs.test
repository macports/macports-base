set n 0
foreach {switch nodes expected} {
    -in        {1 2 3} {A B C D E F}    -in        {4 5 6} {}
    -out       {1 2 3} {D E F}          -out       {4 5 6} {A B C}
    -adj       {1 2 3} {A B C D E F}    -adj       {4 5 6} {A B C}
    -inner     {1 2 3} {D E F}          -inner     {4 5 6} {}
